using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Drawing;

namespace GamingInterface
{
    public class Button
    {
        public Color bColor;
        public Point loc;
        public Point[] points;
        public int pressedAlpha = 0;
        public Color pressedColor;

        public Button(Color myColor, Point myLoc = default(Point), Point[] myPoints = default(Point[]), Color myPressedColor = default(Color))
        {
            bColor = myColor;
            loc = myLoc;
            points = myPoints;
            pressedColor = myPressedColor;
        }
    }
}
